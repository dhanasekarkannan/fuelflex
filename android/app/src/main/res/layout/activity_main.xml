<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="PAX EMV"
            android:textColor="@color/black_overlay"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:transitionName="transitionPage"
            android:id="@+id/layout_setting"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_sysbar_quicksettings" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_trans_type"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="?attr/actionBarSize"
        android:paddingHorizontal="14dp"
        app:layout_constraintTop_toBottomOf="@id/appbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Trans Type"
            android:id="@+id/tv_type_label"
            android:textColor="@color/black_overlay"
            android:textSize="20sp" />
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:entries="@array/tran_type"
            android:layout_toRightOf="@id/tv_type_label"
            android:id="@+id/spinner_type"
            android:gravity="end|center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/spinner_bg"
            ></androidx.appcompat.widget.AppCompatSpinner>

        <TextView
            android:id="@+id/tv_trans_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="Sale"
            android:focusable="false"
            android:clickable="false"
            android:textStyle="bold"
            android:textColor="@color/black_overlay"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_trans_amt"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:focusable="true"
        android:paddingHorizontal="14dp"
        app:layout_constraintTop_toBottomOf="@id/layout_trans_type">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Trans Amount"
            android:textColor="@color/black_overlay"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_trans_amt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:focusable="false"
            android:clickable="false"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:text="$0.00"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_other_amt"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingHorizontal="14dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/layout_trans_amt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Other Amount"
            android:textColor="@color/black_overlay"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_other_amt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:focusable="false"
            android:clickable="false"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:text="$0.00"
            android:textSize="20sp" />
    </RelativeLayout>



    <com.paxsz.demo.emvdemo.view.keyboard.DigitKeyboardView
        android:id="@+id/view_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:keyBackground="@color/white"
        android:keyPreviewOffset="0dp"
        android:keyTextColor="#bebebe"
        android:paddingTop="0dp"
        android:shadowColor="#FFF"
        android:shadowRadius="0.0"
        app:layout_constraintBottom_toBottomOf="parent">

    </com.paxsz.demo.emvdemo.view.keyboard.DigitKeyboardView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/gray"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintBottom_toTopOf="@id/view_keyboard" />
</androidx.constraintlayout.widget.ConstraintLayout>